<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.flowers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.wit.flowers.main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.wit.flowers.activities.CreateNewFlowerActivity">
        </activity>
        <activity android:name="org.wit.flowers.activities.FlowerDetailActivity">
        </activity>
        <activity android:name="org.wit.flowers.activities.GalleryActivity">
        </activity>
        <activity android:name="org.wit.flowers.activities.ListFlowersActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>